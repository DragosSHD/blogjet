<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blogjet | <%= title%>></title>
    <%- include('../partials/links') %>
    <link rel="stylesheet" href="css/forms.css">
</head>
<body>
<header class="sticky-top">
    <%- include('../partials/header'); %>
</header>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <main>
                <h1><%= h1 %></h1>
                <form action="/edit_post" method="POST">
                    <div class="form-group" style="display: none">
                        <input type="text" class="form-control" id="post_id"
                               name="id" value="<%= crtPost._id%>">
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="post_title" placeholder="A fancy title here..." required
                               name="title" value="<%= crtPost.title%>">
                    </div>
                    <div class="form-group">
                        <label for="keywords">Keywords</label>
                        <input type="text" class="form-control" id="post_title" placeholder="cats, cars, business, money, banks..."
                               required name="keywords" value="<%= crtPost.keywords%>">
                    </div>
                    <div class="form-group">
                        <label for="category">Select Category</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="category">
                            <option disabled="disabled">Select a category....</option>
                            <% if(categories.length) {
                            for(let i = 0; i < categories.length; i++) {
                                if(String(categories[i]._id) === String(crtPost.category)) {
                            %>
                                <option selected="true" value="<%= categories[i]._id%>"><%= categories[i].name %></option>
                            <%} else {%>
                                <option value="<%= categories[i]._id%>"><%= categories[i].name %></option>
                            <% } %>
                            <% }} %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="shortDescription">Short Description</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" required name="shortDescription"><%= crtPost.shortDescription %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="articleText">Article body</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="8" required name="articleText"><%= crtPost.articleText %></textarea>
                    </div>
                    <div id="bottom_line" class="form-group">
                        <span>
                            <input type="checkbox" id="isPublished" name="isPublished" <% if(crtPost.isPublished) {%>checked<%}%>>
                            <label for="isPublished">Publish article</label>
                        </span>
                        <input id="submitBtn" type="submit" value="Edit Article">
                    </div>
                </form>
            </main>
        </div>
    </div>
</div>
<footer>
    <%- include('../partials/footer') %>
</footer>
</body>
</html>